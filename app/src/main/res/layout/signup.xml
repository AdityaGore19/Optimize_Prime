<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#6A8D96">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="179dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/profile2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/userLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="276dp"
            android:background="@drawable/box2"
            android:gravity="center"

            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/studentID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></TextView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="154dp"
            android:layout_height="143dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/images"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <EditText
            android:id="@+id/Name"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/box3"
            android:backgroundTint="#FFFCFC"
            android:ems="10"
            android:fontFamily="@font/avenir"
            android:foregroundTint="#000000"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#595656"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/box3"
            android:drawableRight="@drawable/password_invisible"
            android:ems="10"
            android:fontFamily="@font/avenir"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="12dp"
            android:textColor="#000000"
            android:textColorHint="#595656"
            app:layout_constraintEnd_toEndOf="@+id/Mobile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Mobile"
            app:layout_constraintTop_toBottomOf="@+id/Mobile" />

        <EditText
            android:id="@+id/studentID"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/box3"
            android:ems="10"
            android:fontFamily="@font/avenir"
            android:hint="Student id"
            android:inputType="numberSigned"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#595656"
            app:layout_constraintEnd_toEndOf="@+id/Name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/Name"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

        <Button
            android:id="@+id/signup"
            android:layout_width="194dp"
            android:layout_height="64dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/box4"
            android:elevation="10dp"
            android:fontFamily="@font/playfair"
            android:gravity="center"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/Password"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/Password"
            app:layout_constraintTop_toBottomOf="@+id/Password" />

        <EditText
            android:id="@+id/userLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="78dp"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView" />


        <EditText
            android:id="@+id/Mobile"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/box3"
            android:ems="10"
            android:fontFamily="@font/avenir"
            android:hint="Mobile Number"
            android:inputType="numberSigned"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#595656"
            app:layout_constraintEnd_toEndOf="@+id/studentID"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/studentID"
            app:layout_constraintTop_toBottomOf="@+id/studentID" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>